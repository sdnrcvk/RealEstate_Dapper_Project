@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategori Güncelleme Sayfası</h6>
        <form method="post">
            <input type="hidden" asp-for="CategoryId" class="form-control" />
            <label>Kategori Adı</label>
            <input type="text" asp-for="CategoryName" class="form-control" />
            <br />
            <button class="btn btn-success">Kategori Güncelle</button>
        </form>
    </div>
</div>